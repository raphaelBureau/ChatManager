@model ChatManager.Models.Friendship

@{
    ViewBag.Title = "Gestion des amis";
}

<h2>Gestion des amitiés</h2>
<div class="main">
    <div id="FriendsContainer" class="FriendsContainer"> <!-- Refreshed periodically --> </div>
</div>

@section Scripts {
    
    <script defer>
        function ajaxActionCall(actionLink, callback = null) {
            // Ajax Action Call to actionLink
            $.ajax({
                url: actionLink,
                method: 'GET',
                success: () => {
                    if (callback != null) callback();
                }
            });
        }
        @*PartialRefresh.setTimeOutPage("@Url.Action("End","Session")");*@
        let actors = new PartialRefresh("@Url.Action("Friends", "Friendships")", "FriendsContainer", 15);
    </script>
}